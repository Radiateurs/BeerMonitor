{
   "compilerOptions": {
      "module": "commonjs",
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es5",
      "moduleResolution": "node",
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
         "*": [
            "node_modules/*",
            "src/types/*"
         ]
      },
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": true,
      "sourceMap": true
   },
   "include": [
       "src/**/*"
   ]
}